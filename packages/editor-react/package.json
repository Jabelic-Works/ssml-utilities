{
  "name": "@ssml-utilities/editor-react",
  "version": "0.5.3",
  "type": "module",
  "main": "./dist/editor-react.umd.cjs",
  "module": "./dist/editor-react.js",
  "types": "./dist/index.d.ts",
  "author": "Jabelic",
  "private": false,
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/editor-react.js",
      "require": "./dist/editor-react.umd.cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
