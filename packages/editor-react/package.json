  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vite": "^4.5.9",
    "vite-plugin-dts": "^3.9.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
